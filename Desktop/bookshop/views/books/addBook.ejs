<%- include("partials/header") %>
    <%- include("partials/navbar") %>
    <h2>Add Book</h2>

    <form action="/addBook" method="POST" enctype="multipart/form-data">
        <label for="title">Title</label>
        <input type="text" name="title">

        <label for="author">Author</label>
        <input type="text" name="author">
<br>
        <label for="description">Description</label>
        <input type="text" name="description">
<br>
        <label for="purchaseCount">PurchaseCount</label>
        <input type="number" name="purchaseCount">
<br>
        <label for="category">Category</label>
        <select name="category" id="category">
            <option value="business">Busines</option>
            <option value="Historical">Historical</option>
            <option value="Christianity">christianity</option>
            <option value="Empowerment">empowerment</option>
            <option value="Knowledge">knowledge</option>
            <option value="pips">Pips</option>
        </select>

        <label for="tags">Tags</label>
        <select name="tags" id="tags">
            <option value="onOffer">On Offer</option>
            <option value="outOfStock">Out Of Stock</option>
            <option value="onDemand">On Demand</option>
        </select>
<br>
<br>
        <label for="image">Image Url</label>
        <input type="file" name="image" id="image">

        <button>Save Books</button>
    </form>
    <br>
    <a href="/books"> <button>Back to books</button></a>

    <%- include("partials/footer") %>